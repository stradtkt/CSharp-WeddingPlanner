@model WeddingPlanner.Models.RegisterUser

<div class="row">
    <div class="col-md-6 offset-3">
        <h1 class="text-center">Register</h1>
        <form asp-action="RegisterUser" asp-controller="Home" method="POST">
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="FirstName"></span>
                </div>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="LastName"></span>
                </div>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="Email"></span>
                </div>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="Password"></span>
                </div>
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="Confirm"></span>
                </div>
                <label asp-for="Confirm"></label>
                <input asp-for="Confirm" class="form-control">
            </div>
            <input type="submit" value="Register" class="btn btn-danger">
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-6 offset-3">
        <p class="lead text-center">Need to log in instead? <a asp-action="Login" asp-controller="Home" asp-area="" class="btn btn-round btn-primary">Login</a></p>
    </div>
</div>